<style>
   
    p{
        text-align: center;
        margin-top: 10px;
        color: #323031;
        size: 100px;
        
    }
    #theimg{
        display: inline-block;
        text-align: center;
        align-items: center;
        padding: 5px;
        /* margin-right: 100px; */
        margin: 10px 10px 10px 100px;
        
    }
  
    a:link {
    text-decoration: none;
    }
    
    a:hover {
    font-size:150%;
    
    }
</style>
 
 
    <% books.forEach(element=>{ %>
        <div class="well" id="theimg" >
            
            <a href="books/<%= element.id %>">
                <img src="<%= element.volumeInfo.imageLinks.thumbnail %>" >
                <p><%= element.volumeInfo.title %></p>
             </a>
               
            
        </div>
     
    <% }) %> 
     

