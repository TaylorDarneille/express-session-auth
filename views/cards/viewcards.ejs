
<!-- <link href="/css/style.css" rel="stylesheet" type="text/css"> -->

<h1>View Cards</h1>

 
  <!-- <h1 class="title">Hover Me!</h1> -->


  <% card.forEach((c) => { %>
  <div class="container">
    <div class="card">
        <div class="card-inner">
            <div class="front">
                <img src="/images/map.png" class="map-img">
                <div class="row">
                    <img src="/images/chip.png" width="60px">
                    <img src="/images/visa.png" width="80px">
                </div>
                <div class="row card-no">
                    <p><%= c.cardNumber%></p>
                </div>
                <div class="row card-ho">
                    <p>CARD HOLDER</p>
                    <p>VALID TILL</p>
                </div>
                <div class="row name">
                    <p><%= c.cardName%></p>
                    <p>10/25</p>
                    <!-- <p><= c.expDate%></p> -->
                </div>
            </div>
            <div class="back">
              <img src="/images/map.png" class="map-img">
              <div class="bar"></div> 
              <div class="row card-cvv">
                <div>
                    <img src="/images/pattern.png">
                </div>
                <p><%= c.cvc%></p>
              </div> 
              <div class="row card-text">
                <p>This is a virtual card design built using HTML and CSS.</p>
              </div>  
              <div class="row signature">
                <p>CUSTOMER SIGNATURE</p>
                <img src="/images/visa.png" width="80px">
              </div>         
            </div>
        </div>
    </div>
</div>
<form method="POST" action="/cards/viewcards/<%= c.id %>?_method=DELETE">
    <button type="submit">delete</button>
</form>

<% }) %>



